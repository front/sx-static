{% extends "layouts::base.twig" %}

{% block content %}
  <div id="primary" class="content-area">
    <main id="main" class="site-main" role="main">
      <div class="container">

        <div class="entry-content">

          <h1>Fixed background photo</h1>

          <br><br><br>

          <div class="wp-block-starterx-fixed-bg alignfull">
            <div class="fixed-bg parallax-background" style="background-image: url(img/fixed-bg/brooke-lark-500141-unsplash.jpg); background-position-x: 100%">
              <div class="fixed-bg__overlay"></div>
              <div class="fixed-bg__wrapper">
                <div class="alignwide">
                  <div class="fixed-bg__text">
                    <div class="fixed-bg__title h1">Starter theme, the buiding blocks for a unique and professional
                      website.
                    </div>
                    <div class="fixed-bg__description">
                      <p>Build a unique website by selecting and customizing blocks. Pick blocks from a repository and
                        make them your own.</p>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>

          <br><br><br>

        </div>

      </div>
    </main><!-- #main -->
  </div><!-- #primary -->
